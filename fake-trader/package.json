{
  "name": "fake-trader",
  "version": "1.0.0",
  "description": "Fake trading simulation worker for strategy testing",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev-v2": "tsx watch src/index-v2.ts",
    "build": "tsc",
    "build-v2": "tsc src/index-v2.ts --outDir dist-v2",
    "start": "node dist/index.js",
    "start-v2": "node dist-v2/index-v2.js",
    "test": "tsx src/tests/index.ts",
    "setup-db": "tsx setup-staging-db.ts",
    "setup-dev": "tsx setup-staging-db.ts dev",
    "setup-staging": "tsx setup-staging-db.ts staging",
    "migrate": "tsx ensure-canonical-tables.ts",
    "clear-dev": "tsx clear-dev-data.ts"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}